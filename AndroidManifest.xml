<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shiftu.trafficsurvey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shiftu.trafficsurvey.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.EmployeeActivity"
            android:label="@string/title_activity_employee" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.VehicleActivity"
            android:label="@string/title_activity_vehicle" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.CustomVehicleActivity"
            android:label="@string/title_activity_vehicle" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.DataviewActivity"
            android:label="@string/title_activity_dataview" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
        <activity
            android:name="com.shiftu.trafficsurvey.CustomActivity"
            android:label="@string/title_activity_custom" >
        </activity>
    </application>

</manifest>